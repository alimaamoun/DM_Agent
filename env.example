# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_NO_GPU=0  # Set to 1 to force CPU-only for embeddings

# Hugging Face
HUGGINGFACE_TOKEN=your_hf_token_here

# Google Drive Integration
GOOGLE_DRIVE_CREDENTIALS=credentials/google_drive_creds.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Social Media Platform APIs
INSTAGRAM_USERNAME=your_username
INSTAGRAM_PASSWORD=your_password
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Content Generation Settings
DEFAULT_IMAGE_SIZE=1024x1024
MAX_CAPTION_LENGTH=2200
DEFAULT_HASHTAG_COUNT=15

# Scheduling
CONTENT_SCHEDULE_TIMEZONE=America/New_York
APPROVAL_EMAIL=reviewer@yourdomain.com

# Storage
LOCAL_ASSET_PATH=./assets
OUTPUT_PATH=./output
TEMP_PATH=./temp

# Development
DEBUG=True
LOG_LEVEL=INFO

# n8n Workflow Engine
N8N_HOST=http://localhost:5678
N8N_AUTH_USER=admin
N8N_AUTH_PASSWORD=your_password

# Redis (for task queuing)
REDIS_URL=redis://localhost:6379/0

# Model Configuration
SD3_MODEL_PATH=./models/stable-diffusion-3-medium
PROMPT_ENHANCER_MODEL=brxce/stable-diffusion-prompt-generator
CAPTION_MODEL=llama3:8b-instruct
TEXT_MODEL=mistral:7b-instruct 